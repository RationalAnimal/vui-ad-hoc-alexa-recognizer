{
  "description": "Simple domain",
  "recognizers": [
    {
      "key": "nulltest",
      "path": "./test/nulltestdomain/nullrecognizer.json"
    },
    {
      "key": "notnulltest",
      "path": "./test/nulltestdomain/notnullrecognizer.json"
    },
    {
      "key": "undefinedtest",
      "path": "./test/nulltestdomain/undefinedrecognizer.json"
    },
    {
      "key": "notundefinedtest",
      "path": "./test/nulltestdomain/notundefinedrecognizer.json"
    },
    {
      "key": "greaterthantest",
      "path": "./test/nulltestdomain/greaterthanrecognizer.json"
    }
  ],
  "states": [
    {
      "matchCriteria": {
        "selector": "someNullValue",
        "isNull": true
      },
      "matchSpecs": [
        {
          "recognizer": "nulltest",
          "responder": {
            "result": {
              "directValue": {"text": "Null test recognizer used"}
            }
          }
        }
      ]
    },
    {
      "matchCriteria": {
        "selector": "someNotNullValue",
        "isNull": true
      },
      "matchSpecs": [
        {
          "recognizer": "notnulltest",
          "responder": {
            "result": {
              "directValue": {"text": "Not null test recognizer used"}
            }
          }
        }
      ]
    },
    {
      "matchCriteria": {
        "selector": "someNotNullValue",
        "isUndefined": true
      },
      "matchSpecs": [
        {
          "recognizer": "undefinedtest",
          "responder": {
            "result": {
              "directValue": {"text": "Undefined test recognizer used"}
            }
          }
        }
      ]
    },
    {
      "matchCriteria": {
        "selector": "someNotUndefinedValue",
        "isUndefined": false
      },
      "matchSpecs": [
        {
          "recognizer": "notundefinedtest",
          "responder": {
            "result": {
              "directValue": {"text": "Not undefined test recognizer used"}
            }
          }
        }
      ]
    },
    {
      "matchCriteria": {
        "selector": "someGreaterThanValue",
        "greaterThan": 4
      },
      "matchSpecs": [
        {
          "recognizer": "greaterthantest",
          "responder": {
            "result": {
              "directValue": {"text": "Greater than test recognizer used"}
            }
          }
        }
      ]
    }


  ]
}